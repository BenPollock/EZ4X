<div class="container">
	<div class="alert alert-info" id="tradealert">
  		Trade Ticker
	</div>
	<div class="row">
		<div class="col-md-4">
			<form class="form-horizontal" role="form">
				<div class="form-group">
					<label class="col-lg-6 control-label" for="money">Starting Money</label>
					<div class="col-lg-6">
						<input type="number" class="form-control" id="money" value="50000">
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-6 control-label" for="currency">Currency Pair</label>
					<div class="col-lg-6">
						<select class="form-control" id="currency" disabled>
							<option value="1" selected>EUR/USD</option>
							<option value="2">USD/JPY</option>
							<option value="3">GBP/USD</option>
						</select>
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-6 control-label" for="leverage">Leverage</label>
					<div class="col-lg-6">
						<select class="form-control" id="leverage">
							<option value="1">1:1</option>
							<option value="25">25:1</option>
							<option value="50" selected>50:1</option>
							<option value="100">100:1</option>
							<option value="200">200:1</option>
						</select>
					</div>
				</div>
				<div class="col-lg-6"></div>
				<div class="col-lg-6">
					<button type="button" class="btn btn-primary" onClick="initSession()">New Session</button>
				</div>
			</form>
		</div>
		<div class="col-md-7 col-md-offset-1">
			<form class="form-horizontal" role="form">
				<div class="form-group">
					<label class="col-lg-7 control-label" for="bollinger" style="text-align:left;">Bollinger Bands®</label>
					<div class="col-lg-2">
						<input type="number" class="form-control" id="bollinger" value="10">
					</div>
					<div class="col-lg-3">
						<div class="make-switch switch-large">
							<input type="checkbox" checked>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-3 control-label" for="macds" style="text-align:left;">MACD</label>
					<div class="col-lg-2">
						<input type="number" class="form-control" id="macds" value="12">
					</div>
					<div class="col-lg-2">
						<input type="number" class="form-control" id="macdl" value="26">
					</div>
					<div class="col-lg-2">
						<input type="number" class="form-control" id="macde" value="9">
					</div>
					<div class="col-lg-3">
						<div>
							<input type="checkbox" id="MACDswitch" checked data-size="large">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-7 control-label" for="rsi" style="text-align:left;">Relative Strength Index</label>
					<div class="col-lg-2">
						<input type="number" class="form-control" id="rsi" value="10">
					</div>
					<div class="col-lg-3">
						<div class="make-switch switch-large">
							<input type="checkbox" checked>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-lg-7 control-label" style="text-align:left;">Risk Tolerance</label>
					<div class="col-lg-5">
						<input type="text" class="slider form-control" value="" data-slider-min="0" data-slider-max="10" data-slider-step="1" data-slider-value="5" data-slider-orientation="horizontal"/>
					</div>
				</div>
			</form>
		</div>
	</div>
	<br><br>
	<h8><b>Client</b> © Ben Pollock 2014, <b>API</b> © Yufei Wang 2014</h8>
